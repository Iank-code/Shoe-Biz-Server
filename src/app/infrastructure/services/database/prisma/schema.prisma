generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://ian:mose@123@localhost/shoebiz"
}

model Customer{
  id                        String    @id @default(uuid())
  name                  String
  email                     String
  password                  String
  profileImage              String?
  phoneNumber               String?
  otp                       String?
  confirmedEmail            Boolean?
  created_at                DateTime  @default(now())
  updated_at                DateTime? @updatedAt
}