model Customer{
  id                        String    @id @default(uuid())
  username                  String
  email                     String
  profileImage              String
  phoneNumber               String
  password                  String
  resetToken                String
  confirmedEmail            Boolean
  created_at                DateTime  @default(now())
  updated_at                DateTime? @updatedAt
}